{% trans_default_domain 'admin' %}

{% set style = app.request.request.get('style') %}
{% set title = 'payment.action.approve.submit'|trans %}
{% set name  = 'approve_' ~ id %}
{% set classes = {
    'default': 'table-row__btn-approve',
    'footer':  'page-footer__btn-approve',
    'header':  'page-header__btn-approve',
    'show':    'modal-actions__btn-approve',
} %}

<form name="{{ name }}" action="{{ url }}" method="post" class="js-form" data-reload-page="1">
    {% for input_name, input_value in {
        (name ~ '[id]'): id,
        'style':         style,
    } %}
        <input name="{{ input_name }}" type="hidden" value="{{ input_value }}">
    {% endfor %}
    <button type="submit"
            title="{{ title|e('html_attr') }}"
            onclick="return confirm('{{ 'payment.action.approve.confirm'|trans|e('js') }}');">
        {{ title }}
    </button>
</form>
